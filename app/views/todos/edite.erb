<h1>Edit a Todo item</h1>
<form method="POST" action="/todos/<%= @todo[:id] %>/edit">
  <div class="form-group">
  
    <label for="title">Title:</label>
    <input type="text" class="form-control" name="title" placeholder="<%= @todo[:title] %>">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea class="form-control" name="description" placeholder="<%= @todo[:description] %>"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

