<h1>Todo app</h1>

<% if @todos.size > 0  %>
<ul class="list-group">
<% @todos.each do |todo| %>
  <li class="list-group-item">
    <a href="/todos/<%= todo[:id] %>">
      <%= todo[:title] %>
    </a>


    <div class="container text-right">
      <a href="/todos/<%= todo[:id] %>/edit" class="btn btn-primary" role="button">Edit2</a>
    </div>

  </li>
<% end %>
</ul>
<% end %>